<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackGround"
    tools:context=".signup">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="131dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/pri" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="599dp"
                android:orientation="vertical"
                app:layout_constraintVertical_bias="1.0">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="ثبت نام"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp" />





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/rname"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/inputdesign"
                        android:ems="10"
                        android:fontFamily="@font/medium"
                        android:hint="@string/name"
                        android:inputType="textPersonName"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/title"
                        android:textColorHint="@color/about" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/rfamily"
                        android:layout_width="198dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/inputdesign"
                        android:ems="10"
                        android:fontFamily="@font/medium"
                        android:hint="@string/fam"
                        android:inputType="textPersonName"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/title"
                        android:textColorHint="@color/about" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/rusername"
                        android:layout_width="198dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/inputdesign"
                        android:ems="10"
                        android:fontFamily="@font/medium"
                        android:hint="@string/username"
                        android:inputType="textVisiblePassword|textNoSuggestions"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/title"
                        android:textColorHint="@color/about" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/rpass"
                        android:layout_width="198dp"
                        android:textDirection="anyRtl"
                        android:gravity="right"
                        android:inputType="textPassword"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/inputdesign"
                        android:ems="10"
                        android:fontFamily="@font/medium"
                        android:hint="@string/pass"

                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/title"
                        android:textColorHint="@color/about" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/rconfirmpass"
                        android:layout_width="198dp"
                        android:layout_height="match_parent"
                        android:textDirection="anyRtl"
                        android:gravity="right"
                        android:inputType="textPassword"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/inputdesign"
                        android:ems="10"
                        android:fontFamily="@font/medium"
                        android:hint="تایید رمز عبور"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/title"
                        android:textColorHint="@color/about" />
                </LinearLayout>
                <TextView
                    android:id="@+id/title3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="70dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/bold"
                    android:text="@string/title3"
                    android:textColor="@color/title"
                    android:textSize="15dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal" >

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rmanbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/bold"
                            android:text="@string/man"
                            android:textAlignment="viewStart"

                            android:textColor="@color/title"
                            android:textSize="15dp" />

                        <RadioButton
                            android:id="@+id/rwomanbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/bold"
                            android:text="@string/woman"
                            android:textAlignment="viewStart"
                            android:textColor="@color/title"
                            android:textSize="15dp" />
                    </RadioGroup>


                </LinearLayout>
                <Button
                    android:id="@+id/reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/button"
                    android:fontFamily="@font/bold"
                    android:text="ثبت و تایید"
                    android:textColor="#ffffff" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>